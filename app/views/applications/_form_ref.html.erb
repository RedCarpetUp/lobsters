<%= form_for [@job, @application], :url => create_job_application_ref_path(@job, @application) do |f| %>

<% if f.object.errors.any? %>
  <%= error_messages_for f.object %>
<% end %>

<div class="box">

<div class="legend">
  Refer for this job
</div>

<% if !@job.referral_incentive.nil? %>

<div class="boxline">
<%= f.label :referrer_name, :class => "required" %>
<%= f.text_field :referrer_name, :maxlength => 100 %>
<div class="hintblock">Enter your details so you can be contacted for referral incentive.</div>
</div>
<br>

<div class="boxline">
<%= f.label :referrer_email, :class => "required" %>
<%= f.email_field :referrer_email, :maxlength => 100 %>
<div class="hintblock">Enter your details so you can be contacted for referral incentive.</div>
</div>
<br>

<div class="boxline">
<%= f.label :referrer_phone_inp, :class => "required" %>
<%= f.telephone_field :referrer_phone_inp, :maxlength => 100 %>
<div class="hintblock">Enter your details so you can be contacted for referral incentive.</div>
</div>
<br>

<% end %>

<div class="boxline">
<%= f.label :name, :class => "required" %>
<%= f.text_field :name, :maxlength => 100 %>
<% if Rails.application.config.anon_apply != true %>
<div class="hintblock">Mention the EXACT username of user being referred</div>
<% else %>
<div class="hintblock">Mention applicant name as it is in the documents</div>
<% end %>
</div>
<br>

<div class="boxline">
<%= f.label :email , :class => "required" %>
<%= f.email_field :email, :maxlength => 100 %>
<div class="hintblock">Mention applicant email where you would like to be contacted regarding this job</div>
</div>
<br>

<div class="boxline">
<%= f.label :phoneno_inp , "Mobile no",:class => "required" %>
<%= f.telephone_field :phoneno_inp, :maxlength => 100 %>
<div class="hintblock">Mention applicant phone number</div>
</div>
<br>

<div class="boxline">
<%= f.label :details_nomark, "Description", :class => "required" %>
<%= f.text_area :details_nomark, :style => "width: 709px !important;", :rows => 5 %>
<div class="hintblock">Give a brief description about applicant, make sure it contains all the fields mentioned as required</div>
</div>
<br>

<%= recaptcha_tags %>

</div>

<div class="box">
<div class="boxline actions">

      <div class="box">
        <div class="boxline actions markdown_help_toggler">
          <div class="markdown_help_label">
            Markdown formatting available
          </div>

			<%= f.submit(@application.new_record? ? 'Apply' : 'Edit') %>

          <div style="clear: both;"></div>

          <%= render :partial => "global/markdownhelp",
            :locals => { :allow_images => true } %>
        </div>
      </div>

</div>
</div>


<% end %>