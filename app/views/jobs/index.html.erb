<% if user_signed_in? %>
  <div class="box">
      <h4><%= link_to "Jobs posted by you" , user_jobs_path(current_user.username)  %>&nbsp&nbsp&nbsp&nbsp<%= link_to "Jobs you have applied for" , user_applications_path(current_user.username) %>&nbsp&nbsp&nbsp&nbsp<%= link_to "Post a Job" , new_job_path  %></h4>
  </div>
<% end %>

<ol class="stories list">
  <%= render :partial => "jobs/listitem", :collection => @jobs,
    :as => :job %>
</ol>

<div class="morelink">
  <% if @page && @page > 1 %>
    <a href="/jobs<%= @page == 2 ? "" : "/page/#{@page - 1}" %>">&lt;&lt; 
      Page <%= @page - 1 %></a>
  <% end %>

  <% if @jobs.count == 20 %>
    <% if @page && @page > 1 %>
      |
    <% end %>

    <a href="/jobs/page/<%= @page + 1 %>">Page
      <%= @page + 1 %> &gt;&gt;</a>
  <% end %>
</div>