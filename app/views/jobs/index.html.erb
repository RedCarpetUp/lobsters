<div class="box search_box">
<h4>Search:</h5>
<%= form_tag jobs_path, method: :get do %>
  <div class="form-group">
    <%= text_field_tag :query, params[:query] %>
    <%= submit_tag 'Search' %>
    <% if params[:utf8].present? %>
      <br>
      <%= link_to "Show all", jobs_path %>
    <% end %>
  </div>
<% end %>
<br>
</div>

<ol class="stories list">
  <%= render :partial => "jobs/listitem", :collection => @jobs,
    :as => :job %>
</ol>
<% if params[:query] %>
<div class="morelink">
  <% if @page && @page > 1 %>
    <a href="/jobs<%= @page == 2 ? "" : "/page/#{@page - 1}" %>?utf8=✓&query=<%= params[:query] %>&commit=Search">&lt;&lt; 
      Page <%= @page - 1 %></a>
  <% end %>

  <% if @jobs.count == 20 %>
    <% if @page && @page > 1 %>
      |
    <% end %>

    <a href="/jobs/page/<%= @page + 1 %>?utf8=✓&query=<%= params[:query] %>&commit=Search">Page
      <%= @page + 1 %> &gt;&gt;</a>
  <% end %>
</div>
<% else %>
<div class="morelink">
  <% if @page && @page > 1 %>
    <a href="/jobs<%= @page == 2 ? "" : "/page/#{@page - 1}" %>">&lt;&lt; 
      Page <%= @page - 1 %></a>
  <% end %>

  <% if @jobs.count == 20 %>
    <% if @page && @page > 1 %>
      |
    <% end %>

    <a href="/jobs/page/<%= @page + 1 %>">Page
      <%= @page + 1 %> &gt;&gt;</a>
  <% end %>
</div>
<% end %>