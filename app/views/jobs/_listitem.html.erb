<li class="story job_item">

  <div class="details">

    <span class="link">
        <%= link_to job_path(job) do %>
          <%= job.is_closed ? '[CLOSED]'+job.title : job.title %>
        <% end %>
    </span>

    <div class="byline">

        <a href="/u/<%= job.poster.username %>" class="new_user"><%= job.company_name %></a>

        <%= time_ago_in_words_label(job.created_at, :strip_about => true) %>
        |
        <%= job.location %>

    </div>

  </div>

</li>